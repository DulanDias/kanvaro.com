# Database Configuration
MONGODB_URI=mongodb://localhost:27017/kanvaro
MONGODB_USERNAME=admin
MONGODB_PASSWORD=password

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this-in-production
JWT_EXPIRES_IN=7d

# Application
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret

# Redis (Optional)
REDIS_URL=redis://localhost:6379

# File Storage
UPLOADS_DIR=./uploads
MAX_FILE_SIZE=26214400

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM_EMAIL=noreply@kanvaro.com
SMTP_FROM_NAME=Kanvaro

# Azure Communication Services (Optional)
AZURE_COMMUNICATION_CONNECTION_STRING=your-azure-connection-string
AZURE_COMMUNICATION_FROM_EMAIL=noreply@kanvaro.com
AZURE_COMMUNICATION_FROM_NAME=Kanvaro

# External Storage (Optional)
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_S3_BUCKET=your-bucket-name
AWS_REGION=us-east-1

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info
